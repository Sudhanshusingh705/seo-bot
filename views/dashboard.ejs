<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sudhanshu Singh BOT</title>
  <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Lora', serif;
      background-color: #000;
      color: #0f0;
      margin: 0;
      padding: 40px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    header {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 30px;
    }

    img {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      margin-right: 15px;
    }

    h1 {
      color: #0f0;
      font-size: 2.5rem;
      margin: 0;
    }

    textarea {
      width: 100%;
      max-width: 600px;
      height: 200px;
      padding: 10px;
      font-size: 1rem;
      border: 2px solid #fff;
      background: #111;
      color: #0f0;
      resize: vertical;
    }

    button,
    .styled-button {
      margin-top: 15px;
      padding: 10px 20px;
      font-size: 1.1rem;
      font-weight: bold;
      background: linear-gradient(135deg, #ff0000, #00ff00);
      color: #000;
      border: 2px solid #fff;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      border-radius: 5px;
    }

    button:hover,
    .styled-button:hover {
      background: linear-gradient(135deg, #00ff00, #ff0000);
    }

    .status {
      margin-top: 20px;
      font-size: 1.2rem;
      color: #0f0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 30px;
      background: #111;
    }

    th, td {
      padding: 12px 16px;
      text-align: left;
      border-bottom: 1px solid #333;
    }

    th {
      background: #222;
    }

    a {
      display: inline-block;
      margin: 20px;
      color: #0f0;
      text-decoration: none;
    }

    .footer {
      margin-top: 50px;
      color: #666;
      font-size: 0.9rem;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background: #111;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    h2 {
      color: #0f0;
      font-size: 2rem;
      margin-top: 0;
    }

    .alert {
      padding: 10px;
      margin-top: 10px;
      background: #222;
      color: #0f0;
      border-left: 4px solid #0f0;
    }

    .date-group {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <header>
      <img src="/logo.jpg" alt="Sudhanshu Singh">
      <h1>ðŸŽ“ Sudhanshu Singh BOT</h1>
    </header>

    <!-- Bulk Links Input -->
    <p>Paste your bulk links (one per line):</p>
    <form action="/run" method="POST">
      <textarea name="links" placeholder="https://www.example.com&#10;https://www.anotherexample.com"></textarea>
      <button type="submit">ðŸš€ Start Visiting</button>
    </form>

    <!-- Status Message -->
    <% if (typeof status !== "undefined") { %>
      <div class="status"><%= status %></div>
    <% } %>

    <!-- SEO Tools Button -->
    <a href="/seo" class="styled-button">ðŸŽ“ Go to SEO Tools</a>

    <!-- History Display -->
    <h2 style="margin-top: 40px;">ðŸ“œ Visit History</h2>
    <a href="/history.csv" class="styled-button">ðŸ“¥ Export as CSV</a>
    <a href="/history" class="styled-button">ðŸ“‚ View Full History</a>

    <div class="history-section">
      <% if (Object.keys(history).length === 0) { %>
        <p>No recent visits yet.</p>
      <% } else { %>
        <% Object.keys(history).slice(0, 2).forEach(date => { %>
          <div class="date-group">
            <h3><%= date %></h3>
            <table>
              <thead>
                <tr>
                  <th>URL</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% history[date].slice(-5).forEach(entry => { %>
                  <tr>
                    <td><%= entry.url %></td>
                    <td><%= entry.status %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% }) %>
      <% } %>
    </div>

    <!-- Footer -->
    <div class="footer">Â© Sudhanshu Singh BOT | All rights reserved.</div>
  </div>

  <script>
    async function handleSubmit(event) {
        event.preventDefault();
        const form = event.target;
        const url = form.url.value;
        
        try {
            const response = await fetch('/start', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ url })
            });
            
            const data = await response.json();
            if (!response.ok) {
                throw new Error(data.error || 'Something went wrong');
            }
            
            alert('Process completed successfully!');
            location.reload(); // Refresh to show updated history
        } catch (error) {
            console.error('Error:', error);
            alert('Error: ' + error.message);
        }
    }
  </script>
</body>
</html>